{
  "name": "toduo",
  "version": "1.0.50",
  "scripts": {
    "dev": "bun run dev-backend & bun run dev-frontend",
    "dev-backend": "bun run --watch src/index.ts",
    "dev-frontend": "cd frontend && bun run dev",
    "inst": "bun install && bun install --cwd ./frontend",
    "build": "bun run build-frontend && bun run build-backend",
    "build-frontend": "cd frontend && bun run build-only",
    "build-backend": "bun build --target=bun src/index.ts --outdir dist",
    "start": "bun run dist/index.js",
    "format": "prettier --write .",
    "db": "bunx drizzle-kit generate --dialect sqlite --schema src/database/schema.ts --out src/database/migrations"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.2.0",
    "@elysiajs/static": "^1.2.0",
    "@elysiajs/swagger": "^1.2.0",
    "croner": "^9.0.0",
    "drizzle-orm": "^0.36.4",
    "elysia": "^1.2.10",
    "jose": "^5.9.6",
    "logestic": "^1.2.4"
  },
  "devDependencies": {
    "bun-types": "latest",
    "drizzle-kit": "^0.28.1",
    "prettier": "^3.4.2"
  },
  "engines": {
    "bun": ">=0.1.0"
  },
  "module": "src/index.js"
}
